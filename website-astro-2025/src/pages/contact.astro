---
import Header from "./header.astro";
import Footer from "./footer.astro";
---

<!doctype html>
<html lang="en">
  <link rel="stylesheet" href="style.css" />
  <Header currentPage="contact" showTapeMachine={true} />

  <body>
    <div class="wrap">
      <div class="home-content">
        <meta
          name="description"
          content="Contact David Ross for professional audio engineering, mixing, and recording services."
        />

        <form
          aria-labelledby="contactHeading"
          role="form"
          id="contact_form"
          action="https://api.web3forms.com/submit"
          method="POST"
        >
          <h2 id="contactHeading" class="visually-hidden">Contact Form</h2>
          <input
            type="hidden"
            name="access_key"
            value="ceef7160-379a-449f-9c3b-775d11326ff4"
          />

          <label for="fname">First name:</label>
          <input
            type="text"
            id="fname"
            name="fname"
            autocomplete="given-name"
            required
            minlength="2"
            maxlength="50"
          />

          <label for="lname">Last name:</label>
          <input
            type="text"
            id="lname"
            name="lname"
            autocomplete="family-name"
            required
          />

          <label for="email">Email:</label>
          <input
            type="email"
            id="email"
            name="email"
            autocomplete="email"
            required
          />

          <label for="message">Message:</label>
          <textarea name="message" id="message" rows="5" required></textarea>
          <br />

          <div>
            <button class="button" type="submit">submit </button>
            <button class="button" type="reset">Reset</button>
          </div>
        </form>
      </div>

      <div>
        <br />
        <span> </span>
      </div>
      <Footer />
    </div>
  </body>
</html>
